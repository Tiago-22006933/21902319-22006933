<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_zone_risk"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/quizimage"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_fires"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_zone_risk1"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/quizimage1"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_fires"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_zone_risk2"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/quizimage2"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_fires"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_zone_risk6"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/quizimage3"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_fires"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_zone_risk3"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/quizimage4"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_fires"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_zone_risk4"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/quizimage5"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_fires"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>